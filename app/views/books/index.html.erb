
<h1>New book</h1>
  <%= form_with model: @book do |f| %>
  <h4>Tile</h4>
  <%= f.text_field :title %>

  <h4>Opinion</h4>
  <%= f.text_area :body %>
    <%= f.submit '投稿' %>
  <% end %>
<h2>Books</h2>
<table>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

  <% @books.each do |book| %>
  <tr>

  <td><%= book.title %></td>
  <td><%= book.body %></td>

  </tr>
<% end %>
  </tbody>
</table>
