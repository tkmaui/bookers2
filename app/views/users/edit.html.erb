


<main>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h2>User info</h2>
        <%= form_with model:@user, local:true do |f| %>
         <div id="error_explanation">
          <% if @user.errors.any? %>
            <h3><%= @user.errors.count %>errors prohibited this obj from being saved:</h3>
            <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          <% end %>
         </div>
          <div class="form-group">
            <div class="field_with_errors">
            <label for="user_name">Name</label>
            </div>
            <div class="field_with_errors">
            <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前", class:"form-control name" %>
            </div>
          </div>
          <div class="form-group">
            <label for="user_image">Image</label>
            <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*", class:"form-control-file user_image" %>
          </div>
          <div class="form-group">
            <label for="user_Introduction">Introduction</label>
            <%= f.text_field :introduction, autofocus: true, id:"inputintroduction", class:"form-control introduction" %>
          </div>
          <div>
            <%= f.submit "Update User" %>
          </div>
         <% end %>

      </div>
    </div>
  </div>
</main>










