<div class="container px-5 px-sm-0">
  <div id="error_explanation">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <tr><%= image_tag current_user.get_profile_image(100,100) %></tr>
      <table class="table">
        <tbody>
          <tr>
            <th>name</th>
            <th><%= current_user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= current_user.introduction %></th>
          </tr>
        </tbody>
      </table>
      <div class="row">
        <%= link_to edit_user_path(current_user.id), class:"btn btn-outline-secondary btn-block edit_user_101593" do %>
        <i class="fas fa-user-cog"></i>
        <% end %>
      </div>




      <h2 class="mt-3">New book</h2>
        <%= form_with model: @book, url:"/books",local:true do |f| %>
        <div class="form-group">
          <div class="field_with_errors">
            <label for="book_title">Title</label>
          </div>
          <div class="field_with_errors">
          <%= f.text_field :title, class:"form-control book_title" %>
          </div>
        </div>
        <div class="form-group">
          <label for="book_opinion">Opinion</label>
          <div class="field_with_errors">
          <%= f.text_area :body, class:"form-control book_body" %>
          </div>
        </div>
        <div class="form-group">
          <%= f.submit 'Create Book', class:"btn btn-success" %>
        </div>
        <% end %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
         <% @users.each do |user| %>
          <tr>
            <td><%= image_tag user.get_profile_image(100,100) %></td>
            <td>
              <%= user.name %>
            </td>
            <td><%= link_to "Show", user_path(user.id) %></td>
          </tr>
         <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

