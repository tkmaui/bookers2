<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container">
        <% if user_signed_in? %>
          <%= link_to "Bookers", root_path, class:"navbar-brand" %>
        <div class="navbar-collapse collapse show" id="navbarNavDropdown" style>

          <ul class="navbar-nav ml-auto">
            <li>
              <%= link_to "Home", user_path(current_user.id), class:"nav-link text-light" %>
            </li>
            <li>
              <%= link_to "Users", users_path, class:"nav-link text-light" %>
            </li>
            <li>
              <%= link_to 'Books', books_path, class:"nav-link text-light"%>
            </li>
            <li>
              <%= link_to "Log out", destroy_user_session_path, method: :delete, class:"nav-link text-light" %>
            </li>
          </ul>
        </div>
        <% else %>
          <%= link_to "Bookers", root_path, class:"navbar-brand" %>
         <div class="navbar-collapse collapse show" id="navbarNavDropdown" style>
           <ul class="navbar-nav ml-auto">
            <li>
              <%= link_to "新規登録", new_user_registration_path, class:"nav-link text-light" %>
            </li>
            <li>
              <%= link_to "ログイン", new_user_session_path, class:"nav-link text-light"%>
            </li>
        <% end %>
          </ul>
        </div>
      </div>
    </nav>
    </header>
    <main><%= yield %></main>
    <footer>
      <div class="container mt-5">
        <div class="row">
          <div class="mx-auto">
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
